<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Define the stroke (border) color and width -->
    <stroke
        android:width="2dp"
        android:color="#FF0000" /> <!-- This is the red color -->
    <!-- Define the corner radius for rounded corners -->
    <corners android:radius="8dp" />
    <!-- Define the solid background color (optional, but good practice if you want a solid fill) -->
    <solid android:color="@android:color/white" />
</shape>